<p id="notice"><%= notice %></p>



    <div class="container">
    <h1>Research lists</h1>

    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3">Operations</th>
        </tr>
      </thead>
      <tbody>
        <% @researches.each do |research| %>
          <tr>
            <td><%= research.title %></td>
            <td><%= link_to 'Show', research, class: 'btn btn-primary btn-xs' %></td>
            <td><%= link_to 'Edit', edit_research_path(research), class: 'btn btn-warning btn-xs'%></td>
            <td><%= link_to 'Destroy', research, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to new_research_path, class: 'btn btn-success' do %>
      <i class="glyphicon glyphicon-plus"></i> New Research



<% end %>
