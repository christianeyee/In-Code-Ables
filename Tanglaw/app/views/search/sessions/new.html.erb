<%stylesheet_link_tag "login.scss"%>
<% provide(:title, "Log in") %>


  <div id="main-container" class="container">

  <div class="row">
    <div class="col-md-12">
      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: "alert alert-#{name}" %>
      <% end -%>
    </div>
  </div>

  <div class = "row" id = "header">Log in</div>
  <div class="row">
    <div class="col-md-4" id = "form1">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :username %>
        <%= f.email_field :username, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Log in", class: "btn btn-primary login" %>
      <% end %>
      <p>New user? <%= link_to new_user_path, class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-plus"></i> Sign Up
      <% end %> </p>
    </div>
  </div>
</div>
