<p id="notice"><%= notice %></p>

<div id="main-container" class="container">

<h1>Admin: Managing Users</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Affiliation</th>
      <th colspan="3">Admin Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.f_name %></td>
        <td><%= user.l_name %></td>
        <td><%= user.affiliation %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info btn-xs'%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_user_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Add a User
<% end %>
</div>
