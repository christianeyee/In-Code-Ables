<!-- Header -->
<header id="top" class="header">
		<div class="content">
					<div class="container">
						<div class="row">
							<div class="col-md-5 col-md-offset-1">
								<% unless @research.attachment_url.blank? %>
				        <iframe src="<%="http://localhost:3000"+ @research.attachment_url%>" frameborder="0"></iframe>
				        <% end %>
							</div>
							<div class="col-md-5">
								<div class="jumbotron">
										<h4>Featured Innovation of The Week</h4>
										<% for x in @research.categories %>
											<%= inline_svg(x.name.downcase + '.svg',{fill:'white',height:'30px',width:'30px'})%>
										<% end %>
									<% unless @research.nil? %>
										<h2><%= @research.title %></h2>
										<p><i>"<%= @research.abstract %>"</i></p>
										<h3><%= @research.author %></h3>

									<% else %>
										<h3>No Researches Yet!</h3>
									<% end %>
								</div>
							</div>
						</div>
					</div>
					<a href="#about" class="btn btn-dark btn-lg">Find Out More</a>
		</div>
</header>

<!-- About -->
<section id="about" class="about">
		<div class="container">
				<div class="heading">
					<h2>About</h2>
					<hr class="small">
				</div>
				<div class="row">
						<div class="col-lg-4 text-center">
							
						</div>
						<div class="col-lg-4 text-center">
							<%= image_tag('logo.png',:class=>'logo') %>
						</div>
						<div class="col-lg-4 text-center">
						</div>
				</div>
				<!-- /.row -->
		</div>
		<!-- /.container -->
</section>


    <!-- Categories -->
    <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
    <section id="categories" class="services bg-primary">
        <div class="container">
            <div class="row text-center">
                <div class=" col-lg-10 col-lg-offset-1">
                    <h2>Categories</h2>
                    <hr class="small">
                    <row>
                    <% @categories.each do |category| %>
                        <div class="category col-md-3 col-sm-6 col-xs-6">
                            <div class="service-item">
															<% temp=category.name%>
                                <%= inline_svg(temp.downcase+'.svg',{class:'svg'})%>
                                <h4>
                                    <strong><%= category.name %></strong>
                                </h4>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                <%= link_to 'MORE', category, :class=>"more" %>
                            </div>
                        </div>
	                    <!-- /.row (nested) -->
                    <% end %>
               		</div>
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->
    </section>


